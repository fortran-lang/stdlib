        res(:, 2:5) = nor_pdf(x2, loc, scale)
        call check(all(abs(res - reshape(ans, [3,5])) < ${k1}$tol),            &
            msg="normal_distribution_pdf_${t1[0]}$${k1}$ failed", warn=warn)
